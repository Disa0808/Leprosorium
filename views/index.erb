<h2>Latest posts:</h2>
<br />

<% @results.each do |post| %>
	<p>
		<%= post['Content'] %>
		<br />
		<br />		
		<span style="font-size: 75%; color: #999">Added by <%= post['author'] %> at: <%= post['Created_date'] %></span>
		<br />	
		<br />			
		<a href="/details/<%= post['id'] %>">Comments</a>
	</p>
	<hr />

<% end %>