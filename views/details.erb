<h4>Post details:</h4>
<br />
<br />
<p>
	<span style="font-size: 150%"><%= @row['Content'] %></span>
	<br />
	<br />		
	<span style="font-size: 75%; color: #999">Added by <%= @row['author'] %> at: <%= @row['Created_date'] %></span>
</p>
<br />
<br />


<h4>Comments:</h4>
<% @comments.each do |comment| %>
	<p>
		<%= comment['Content'] %>
		<br />
			<span style="font-size: 75%; color: #999">Added at: <%= @row['Created_date'] %></span>
	</p>
	<hr />
<% end %>


<form action="/details/<%= @row['id'] %>" method="POST" role="form">
	<textarea name="content" class="form-control" rows="6" placeholder="Type comment tex here"></textarea>
	<br />
  	<button type="submit" class="btn btn-primary">Add comment</button>
</form>




